extends layout

block body
  div#login.container
    img(src='/images/infusion2018.jpg' align='middle')
    div: form(method='post', class='form-vertical')
      fieldset
        legend: strong.text-info Login - QOTD

        if message.error
          div.alert.alert-danger Missing/Wrong username or password

        else
          if message.success
            div.alert.alert-success You are now connected

        div.form-group
          label Username:
          input.form-control(name='email', autofocus)

        div.form-group
          label Password:
          input.form-control(name='password', type='password')

        div.form-actions
          input.btn.btn-primary(type='submit', value='Login')
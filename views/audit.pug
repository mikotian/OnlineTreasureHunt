extends layout

block content
    div#game.header.container
        div.row
            div.page-header.col-sm-10
                h1 Game Page
                p.lead Online Treasure Hunt. Welcome Hunter!
            div.col-sm-1
                include about.pug
                a(data-toggle="modal" data-target="#exampleModalCenter")
                    i.fa.fa-info(style="font-size:48px;color:dodgerblue") 
            div.col-sm-1
                a(href='/auth/logout' align='right' data-toggle='tooltip' title='Logout')
                    i.fa.fa-sign-out(style="font-size:48px;color:dodgerblue")
    hr
    div.row
        div#empty.container.col-sm-2
            div.icon-bar
                a.active(href='#')
                    i.fa.fa-home
                a(href='#')
                    i.fa.fa-user
                a(href='#')
                    i.fa.fa-users
                a(href='#')
                    i.fa.fa-database
        div#koschan.container.col-sm-7
            form(method='POST' action='/game/ans')
                h3 #{question}
                br
                -imagesrc=image
                -quesid=id
                img(src=imagesrc align='center')
                br
                label Answer:
                input.form-control(id='inputans' type='text' name='answer')
                br
                input(type='hidden' name='quesid' value=quesid)
                input.btn.btn-outline-dark.btn-block(type='submit' value='Answer')

        div#info.container.col-sm-3
            div.row
                div.card(style="width:150px")
                    h5.card-header(style="background-color:cyan") User Score
                    div.card-body 
                        h2.card-text(align="middle") #{userscore}
            br
            div.row
                div.card(style="width:150px")
                    h5.card-header(style="background-color:magenta") Team Score
                    div.card-body 
                        h2.card-text(align="middle") #{teamscore}
            br
            div.row
                div.card(style="width:150px")
                    h5.card-header(style="background-color:yellow") User Rank
                    div.card-body 
                        h2.card-text(align="middle") #{userrank}
            br
            div.row
                div.card(style="width:150px")
                    h5.card-header(style="background-color:kelvin") Team Rank
                    div.card-body  
                        h2.card-text(align="middle") #{teamrank}
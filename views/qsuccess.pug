extends layout

block content
    div#game.header.container
        div.row
            div.page-header.col-sm-10
                h1 Infusion 2018
                p.lead Question of the Day. Welcome #{firstName}!
            div.col-sm-1
                include about.pug
                a(data-toggle="modal" data-target="#exampleModalCenter")
                    i.fa.fa-info(style="font-size:48px;color:dodgerblue") 
            div.col-sm-1
                a(href='/auth/logout' align='right')
                    i.fa.fa-sign-out(style="font-size:48px;color:dodgerblue")
            
    hr
    div.row
        include qlinks.pug
        div#koschan.container.col-sm-7
            h2 #{message}
            img(src='/images/hooray.gif' style="vertical-align:middle")
        include qinfo.pug
